@model IEnumerable<BibleQuiz.Models.Quiz>
<html>
<head>
    <title>Quiz list</title>
</head>
<body>
    <div class="row col-12">
        <div class="col-5">
            <h1>Quiz</h1>
        </div>
        <div class="col-7">
                <a asp-action="Create" class="btn btn-primary"><i class="fas fa-plus"></i>&nbsp;Create New</a>
        </div>

    </div>
    
    @if (Model.Count() > 0 )
    {
        <table class="table table-striped " style="font-family:Arial">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Question)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ReleasedDate)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @item.Question
                        </td>
                        <td>
                            @item.ReleasedDate
                        </td>
                        <td>
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info" title="Get details"><i class="fas fa-info-circle"></i>
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger" title="Delete Quiz"><i class="far fa-trash-alt"></i></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else {
        <p class="text-danger">No Quiz found</p>
    }
</body>
</html>